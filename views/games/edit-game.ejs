<%- include('../partials/head') %>

<div class="container">
    <h1>Edit Game</h1>

    <form action="/games/<%= game._id %>?_method=PUT" method="POST">
        <label>Game Title:</label>
        <input type="text" name="title" value="<%= game.title %>" required>

        <label>Description:</label>
        <textarea name="description" required><%= game.description %></textarea>

        <label>Image URL:</label>
        <input type="text" name="image" value="<%= game.image %>" required>

        <label>Release Year:</label>
        <input type="number" name="releaseYear" value="<%= game.releaseYear %>" required>

        <label>Visibility:</label>
        <select name="isPublic">
            <option value="false" <%= game.isPublic ? '' : 'selected' %>>Private</option>
            <option value="true" <%= game.isPublic ? 'selected' : '' %>>Public</option>
        </select>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>

    <a href="/games/<%= game._id %>" class="btn btn-secondary">Cancel</a>
</div>

<%- include('../partials/footer') %>